{
  "compilerOptions": {
    "target": "es2022",                                  
    "module": "commonjs",  
    "lib": ["es2022", "dom"],                         
    "rootDir": "./src",                                  
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "src/**/*"
  ]
}